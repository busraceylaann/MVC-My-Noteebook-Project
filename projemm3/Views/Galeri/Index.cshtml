@model IEnumerable<projemm3.Entities.Galeri>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Galeri</h2>
    <a class="btn btn-success" href="/Galeri/Create">Yeni Ekle</a>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Resim URL</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <!--modelden gelen bilgilerin döngüsünü sağlar yani kaç kayıt varsa döngü boyunca bize getircek-->
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ResimId</td>
                    <td><img width="100" height="100" src="@Url.Content(String.Format(item.ResimUrl))" /></td>
                    <td>
                        @Bootstrap.LinkButton("/Galeri/Edit/" + item.ResimId, "warning", string.Empty, "Düzenle", "edit", "Düzenle")
                        @Bootstrap.LinkButton("/Galeri/Delete/" + item.ResimId, "danger", string.Empty, "Sil", "trash", "Sil")
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>