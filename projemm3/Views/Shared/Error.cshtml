@using projemm3.ViewModels
@using projemm3.Entities.Messages
@model ErorViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/login.css" rel="stylesheet" />
<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading">Lütfen Bekle</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <hr />
                    <h1 class="text-center">@Model.Header</h1>

                </div>
                <form id="Login">

                    <div class="text-danger">

                        <h2><span class="glyphicon glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                        <hr />
                        <p class="text-justify">
                            @foreach (ErorMessageobj msg in Model.Items)
                            {
                                @msg.Message<br>
                            }
                        </p>
                    </div>


                </form>
            </div>
            <p class="botto-text"> </p>
        </div>
    </div>


</body>
@{
    string js = string.Empty;
    if (Model.IsReadirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }," + Model.RedirectingTimeout + ");";
    }
}
<script>
    $(function () {
        
        @Html.Raw(js);
    });
</script>



